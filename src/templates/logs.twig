{% extends "emails/_includes/email" %}

{% set selectedTab = 'logs' %}
{% set title = 'Logs for {email}'|t('emails', {'email': email.heading}) %}
{% set order = craft.app.request.getQueryParam("order", 'dateCreated') %}
{% set orderSide = craft.app.request.getQueryParam("orderSide", 'desc') %}
{% set page = craft.app.request.getQueryParam("page", 1) %}
{% set baseUrl = url('emails/logs/' ~ email.id) %}

{% block toolbar %}
    <a href="{{ url('emails') }}" class="btn back">Back</a>
    {% if currentUser.can('deleteEmailLogs') %}
        <a href="#" data-id="{{ email.id }}" class="btn submit js-delete-all">Delete all</a>
        <a href="#" data-id="{{ email.id }}" class="btn submit js-delete-selection" style="display:none">Delete selection</a>
    {% endif %}
{% endblock %}

{% block content %}
    {% if logs %}
        <div class="tableview">
            <table class="vuetable data fullwidth">
                <thead>
                    <tr>
                        {% if currentUser.can('deleteEmailLogs') %}
                            <th>
                                <input type="checkbox" class="checkbox js-select-all" autocomplete="off">
                                <label></label>
                            </th>
                        {% endif %}
                        <th>{{ 'Subject'|t('emails') }}</th>
                        <th {% if order == 'dateCreated' %}class="ordered {{ orderSide }}"{% endif %}>
                            <a href="{{ baseUrl }}?page={{ page }}&orderSide={{ orderSide == 'asc' ? 'desc' : 'asc' }}&order=dateCreated">
                                {{ 'Date'|t('emails') }}
                            </a>
                        </th>
                        <th {% if order == 'to' %}class="ordered {{ orderSide }}"{% endif %}>
                            <a href="{{ baseUrl }}?page={{ page }}&orderSide={{ orderSide == 'asc' ? 'desc' : 'asc' }}&order=to">
                                {{ 'To'|t('emails') }}
                            </a>
                        </th>
                        <th>{{ 'Bcc'|t('emails') }}</th>
                        <th>{{ 'Cc'|t('emails') }}</th>
                        <th>{{ 'Content'|t('emails') }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for index, log in logs %}
                        <tr>
                            {% if currentUser.can('deleteEmailLogs') %}
                                <td>
                                    <input type="checkbox" class="checkbox js-select" data-id="{{ log.id }}"  autocomplete="off">
                                    <label></label>
                                </td>
                            {% endif %}
                            <td>{{ log.subject }}</td>
                            <td>{{ log.dateCreated|date('d/m/Y H:i:s') }}</td>
                            <td>{{ log.email }}</td>
                            <td>{{ log.bcc }}</td>
                            <td>{{ log.cc }}</td>
                            <td id="email-content-{{ index }}"></td>
                        </tr>
                        {% js %}
                            var iframe = document.createElement('iframe');
                            var html = `{{ log.uncompressedContent|raw }}`;
                            document.getElementById('email-content-{{ index }}').appendChild(iframe);
                            iframe.contentWindow.document.open();
                            iframe.contentWindow.document.write(html);
                            iframe.contentWindow.document.close();
                        {% endjs %}
                    {% endfor %}
                </tbody>
            </table>
            {% if pages.pageCount > 1 %}
                <div class="flex pagination">
                    {% for page in range(1, pages.pageCount) %}
                        <a class="page-link page-number{% if page == pages.page + 1 %} active{% endif %}" href="{{ baseUrl }}?page={{ page }}">{{ page }}</a>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    {% else %}
        <p>{{ 'No logs found'|t('emails') }}</p>
    {% endif %}
    {% include "emails/_includes/js-errors" %}
    {% include "emails/_includes/js-logs" with {deleteAction: 'emails/cp-emails/delete-logs'} %}
{% endblock %}

